# Configuración de Django
DJANGO_SETTINGS_MODULE=sheetmusic_api.settings
DJANGO_SECRET_KEY=django-insecure-cambia-esto-por-una-clave-segura-1234567890
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,backend,host.docker.internal

# Configuración de la base de datos
SQL_ENGINE=django.db.backends.postgresql
SQL_DATABASE=sheetmusic
SQL_USER=sheetmusic
SQL_PASSWORD=sheetmusic
SQL_HOST=db
SQL_PORT=5432

# Configuración de CORS (opcional, para desarrollo)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://127.0.0.1:3001,http://host.docker.internal:3001

# Configuración de archivos estáticos y multimedia
STATIC_URL=/static/
STATIC_ROOT=/app/static
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# Configuración de seguridad (en producción, configura estos valores)
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://127.0.0.1:3001,http://host.docker.internal:3001
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

